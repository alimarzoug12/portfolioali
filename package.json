{
  "name": "portfolioali-deploy",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:frontend && npm run build:portfolio && npm run copy",
    "build:frontend": "cd frontend && ../node_modules/.bin/react-scripts build",
    "build:portfolio": "cd portfolio && ../node_modules/.bin/react-scripts build",
    "copy": "mkdir -p frontend/build/portfolio && cp -r portfolio/build/* frontend/build/portfolio/",
    "clean": "rm -rf frontend/build portfolio/build"
  },
  "devDependencies": {
    "react-scripts": "5.0.1"
  }
}